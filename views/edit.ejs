<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizNest</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" -->
    <!-- integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
        integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="dasg-contain">
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <i class="fas fa-brain"></i>
                    <span>QuizNest</span>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/admin" class="nav-link active" onclick="showSection('home')">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/createquiz" class="nav-link" onclick="showSection('quizzes')">Create Quizzes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/dashboard" class="nav-link" onclick="showSection('dashboard')">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/generatequiz" class="nav-link" onclick="showSection('admin')">Generate with AI</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home" class="nav-link stu-dash-log" onclick="showSection('admin')">Logout</a>
                    </li>
                </ul>
                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </div>
        </nav>
        <div class="edit-content1" style="margin-top: 80px;">
            <div class="one">
                <a href="/admin/dashboard/<%= quiz._id %> ">Review.. <span
                        style="color: black; font-size: 18px; margin-left: 10px; margin-right: 20px;">></span></a>
                <p>edit...</p>
            </div>
            <div class="two">
                <h2>Start Editing</h2>
            </div>
        </div>
        <div class="edit-content2 ">
            <div class="edit-ques ">
                <form method="post" action="/admin/dashboard/<%=quiz._id%>?_method=PUT">
                    <div class="mber">
                        <label for="quizName" class="form-label">Quiz Name</label>
                        <input type="text" required class="form-control" name="quiz[quizName]"
                            value="<%= quiz.quizName %>">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" required class="form-control" name="quiz[subject]"
                            value="<%= quiz.subject %>">
                        <label for="points" class="form-label">Points</label>
                        <input type="text" required class="form-control" name="quiz[points]" value="<%= quiz.points %>">
                        <label for="timeLimit" class="form-label">TimeLimit</label>
                        <input type="number" required class="form-control" name="quiz[timeLimit]"
                            value="<%= quiz.timeLimit %>">
                        <label for="description:" class="form-label">Description</label>
                        <textarea style="border: 0.5px solid gray; padding: 10px 10px; border-radius: 5px;" rows="3"
                            name="quiz[description:]"><%= quiz.description%></textarea>
                    </div>
                    <div class="edi-btn">
                        <button class="btn btn-primary add-btn">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setupMobileMenu();
        });

        function setupMobileMenu() {
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('.nav-menu');

            if (hamburger && navMenu) {
                hamburger.addEventListener('click', () => {
                    hamburger.classList.toggle('active');
                    navMenu.classList.toggle('active');
                });

                // Close menu when clicking on a link
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', () => {
                        hamburger.classList.remove('active');
                        navMenu.classList.remove('active');
                    });
                });
            }
        }
    </script>
</body>

</html>