<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizNest</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<style>
    @media (max-width: 768px) {
        .contain .head {
            height: 70px;
            width: 100%;
            background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 10;
            padding: 0 1rem;
            flex-wrap: wrap;
            /* allow wrapping on small screens */
        }

        .head .logo {
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            flex: 1 1 auto;
        }

        .head .logo i {
            margin-right: 10px;
        }

        .head .mid {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            color: white;
            flex: 2 1 auto;
            flex-wrap: wrap;
        }

        .mid a {
            text-decoration: none;
            font-size: 1rem;
            color: white;
            white-space: nowrap;
        }

        .head .right {
            display: flex;
            align-items: center;
            justify-content: center;
            flex: 1 1 auto;
        }

        .right button {
            background-color: rgb(246, 239, 239);
            border: 2px solid red;
            color: red;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: bold;
            padding: 0.5rem 1rem;
        }

        .right button:hover {
            background-color: red;
            color: white;
        }

        .right i {
            margin-left: 10px;
        }
    }
</style>

<body>

    <div class="contain">
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <i class="fas fa-brain"></i>
                    <span>QuizNest</span>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/home/dashboard" class="nav-link active" onclick="showSection('home')">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home/dashboard/quizzes" class="nav-link" onclick="showSection('quizzes')">Quizzes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home/dashboard/stu-dashboard" class="nav-link"
                            onclick="showSection('dashboard')">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home" class="nav-link stu-dash-log" onclick="showSection('admin')">Logout</a>
                    </li>
                </ul>
                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </div>
        </nav>
        <div class="main-container">
            <div class="content1">
                <h2>Available Quizzes</h2>
                <div class="quiz-select">
                    <select id="categoryFilter" onchange="filterQuizzes()">
                        <option value="" selected>All subjects%></option>
                        <% for(let quiz of allquiz) { %>
                            <option value="<%= quiz.subject%>">
                                <%= quiz.subject%>
                            </option>
                            <%}%>
                    </select>
                </div>
            </div>
            <div class="content2">
                <% for(let quiz of allquiz) { %>
                    <div class="card">
                        <div class="one">
                            <h3>
                                <%= quiz.subject%>
                            </h3>
                        </div>
                        <div class="two">
                            <p>
                                <%= quiz.quizName%>
                            </p>
                        </div>
                        <div class="three">
                            <div class="ques">
                                <p>
                                    <%= quiz.noOfQuestions%>
                                </p>
                                <p>Questions</p>
                            </div>
                            <div class="ques">
                                <p>
                                    <%= quiz.timeLimit%>
                                </p>
                                <p>min</p>
                            </div>
                            <div class="ques">
                                <p>
                                    <%= quiz.noOfQuestions%>
                                </p>
                                <p>Attempts</p>
                            </div>
                        </div>
                        <div class="four">
                            <p><i>Test your <%= quiz.subject%> with this challenging quiz!</i></p>
                        </div>
                        <form class="quiz-strt" action="/home/dashboard/quizzes/<%= quiz._id %> ">
                            <button>Start Quiz</button>
                        </form>
                    </div>
                    <%}%>

            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setupMobileMenu();
        });

        function setupMobileMenu() {
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('.nav-menu');

            if (hamburger && navMenu) {
                hamburger.addEventListener('click', () => {
                    hamburger.classList.toggle('active');
                    navMenu.classList.toggle('active');
                });

                // Close menu when clicking on a link
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', () => {
                        hamburger.classList.remove('active');
                        navMenu.classList.remove('active');
                    });
                });
            }
        }
    </script>
</body>

</html>