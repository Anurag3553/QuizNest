<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizNest</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<style>
    @media (max-width: 768px) {
        .contain .head {
            height: 70px;
            width: 100%;
            background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 10;
            padding: 0 1rem;
            flex-wrap: wrap;
            /* allow wrapping on small screens */
        }

        .head .logo {
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            flex: 1 1 auto;
        }

        .head .logo i {
            margin-right: 10px;
        }

        .head .mid {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            color: white;
            flex: 2 1 auto;
            flex-wrap: wrap;
        }

        .mid a {
            text-decoration: none;
            font-size: 1rem;
            color: white;
            white-space: nowrap;
        }

        .head .right {
            display: flex;
            align-items: center;
            justify-content: center;
            flex: 1 1 auto;
        }

        .right button {
            background-color: rgb(246, 239, 239);
            border: 2px solid red;
            color: red;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: bold;
            padding: 0.5rem 1rem;
        }

        .right button:hover {
            background-color: red;
            color: white;
        }

        .right i {
            margin-left: 10px;
        }
    }

    @media (max-width: 768px) {
        .show-content2 {
            min-height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 30px;
            background-color: white;
            padding: 1rem;
        }

        .show-content2 .show-questions {
            width: 100%;
            max-width: 900px;
            overflow-y: auto;
        }

        .show-questions .question {
            background-color: rgba(135, 206, 235, 0.3);
            margin-bottom: 20px;
            padding: 10px;
            box-shadow: 0 5px 5px rgba(0, 0, 0, 0.5);
            border-radius: 10px;
        }

        .question .quess {
            padding: 10px;
            font-weight: bold;
        }

        .question .show-option {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            padding: 10px;
        }

        .show-option input {
            height: 20px;
            width: 20px;
        }

        .show-questions .sbt-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem 0;
        }

        .show-questions .sbt-quiz {
            background-color: rgba(2, 120, 2, 0.3);
            border: 2px solid #218838;
            color: #218838;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 5px;
            padding: 0.5rem 1rem;
        }

        .sbt-quiz:hover {
            background-color: #218838;
            color: white;
        }
    }
</style>

<body>
    <div class="contain" id="contains">
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <i class="fas fa-brain"></i>
                    <span>QuizNest</span>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/home/dashboard" class="nav-link active" onclick="showSection('home')">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home/dashboard/quizzes" class="nav-link" onclick="showSection('quizzes')">Quizzes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home/dashboard/stu-dashboard" class="nav-link"
                            onclick="showSection('dashboard')">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a href="/home" class="nav-link stu-dash-log" onclick="showSection('admin')">Logout</a>
                    </li>
                </ul>
                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </div>
        </nav>
        <div class="show-content1">
            <div class="show-data">
                <h2>
                    <%= quiz.quizName %>
                </h2>
                <div class="show-info">
                    <p>Total Questions : <%= quiz.noOfQuestions%>
                    </p>
                    <p></p>
                </div>
            </div>
        </div>

        <div class="show-time">
            <p><strong>Time Remaining:</strong> <span id="timer">
                    <%= quiz.timeLimit %>:00
                </span></p>
            <input type="hidden" id="startTime" name="startTime">
            <input type="hidden" id="submitTime" name="submitTime">
        </div>

        <div class="show-content2">

            <div class="show-questions">
                <form action="/home/dashboard/quizzes/<%= quiz._id %>/submit" method="POST">
                    <% quiz.questions.forEach((q, qIndex)=> { %>
                        <div class="question">
                            <div class="quess">
                                <h4>
                                    <%= qIndex + 1 %>. <%= q.questionText %>
                                </h4>
                            </div>
                            <div class="show-option">
                                <% q.options.forEach((opt, optIndex)=> { %>
                                    <label>
                                        <input style="margin-left: 20px;" type="radio" name="question-<%= qIndex %>"
                                            value="<%= opt.text %>">
                                        <%= opt.text %>
                                    </label><br>
                                    <% }) %>
                            </div>
                        </div>
                        <% }) %>
                            <div class="sbt-btn">
                                <button class="sbt-quiz" type="submit">Submit Quiz</button>
                            </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setupMobileMenu();
        });

        function setupMobileMenu() {
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('.nav-menu');

            if (hamburger && navMenu) {
                hamburger.addEventListener('click', () => {
                    hamburger.classList.toggle('active');
                    navMenu.classList.toggle('active');
                });

                // Close menu when clicking on a link
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', () => {
                        hamburger.classList.remove('active');
                        navMenu.classList.remove('active');
                    });
                });
            }
        }
        // ‚úÖ Safely embed timeLimit from server
        const quizTimeLimit = parseInt("<%= quiz.timeLimit %>") || 0;
        let timeLeft = quizTimeLimit * 60; // convert minutes to seconds
        const timerEl = document.getElementById("timer");

        // ‚úÖ Set initial timer text immediately
        const setTimerText = () => {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerEl.textContent = `${minutes}:${seconds < 10 ? '0' + seconds : seconds}`;
        };
        setTimerText();

        // ‚úÖ Save start time
        const startTime = new Date();
        document.getElementById("startTime").value = startTime.toISOString();

        // ‚úÖ Flags to avoid repeat alerts
        let hasShown10MinAlert = false;
        let hasShown1MinAlert = false;
        let hasShown30SecAlert = false;

        // ‚úÖ Countdown logic
        const countdown = setInterval(() => {
            timeLeft--;
            setTimerText();

            if (timeLeft === 600 && !hasShown10MinAlert) {
                alert("‚ö†Ô∏è Only 10 minutes left! Please review and submit your quiz soon.");
                hasShown10MinAlert = true;
            }

            if (timeLeft === 60 && !hasShown1MinAlert) {
                alert("‚è∞ 1 minute remaining. Please finish up and submit.");
                hasShown1MinAlert = true;
            }

            if (timeLeft === 30 && !hasShown30SecAlert) {
                alert("üö® 30 seconds left! Quiz will auto-submit soon.");
                hasShown30SecAlert = true;
            }

            if (timeLeft <= 0) {
                clearInterval(countdown);
                document.getElementById("submitTime").value = new Date().toISOString();
                document.querySelector("form").submit();
            }
        }, 1000);

        // ‚úÖ Save manual submit time
        document.querySelector("form").addEventListener("submit", () => {
            document.getElementById("submitTime").value = new Date().toISOString();
        });
        
    </script>


</body>

</html>